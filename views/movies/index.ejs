<!DOCTYPE html>
<html>
  <head>
    <title>Movies</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <form action="/movies/search">
      <input type="text" id="search" name="search">
    </form>
    <h1>Movies (<%= movies.length %>) </h1>
    <ul>
      <% movies.forEach(movie => { %>
        <li><a href="/movies/<%= movie.id %>/detail"><%= movie.title %> - <%= new Date(movie.release_date).getFullYear() %></a></li>
       <% }) %>
    </ul>
    <input type="button" onclick="location.href='/movies/create';" value="New" />
  </body>
</html>
